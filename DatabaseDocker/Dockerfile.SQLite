# Use a minimal base image
FROM alpine:latest

# Define the working directory inside the container
WORKDIR /data

# Install SQLite
RUN apk add --no-cache sqlite

# Copy the SQL scripts to the container
COPY *.sql /data/

# Initialize the SQLite database by running the scripts
RUN sqlite3 inventory.db < /data/01_create_tables.sql && \
    sqlite3 inventory.db < /data/02_insert_data.sql

# Set a volume to persist the database file
VOLUME ["/data"]

# Default command to keep the container running
CMD ["tail", "-f", "/dev/null"]
